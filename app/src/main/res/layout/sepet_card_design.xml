<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="yemekSepetiObj"
            type="com.ecemm.yumico.data.entity.YemekSepeti" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSepet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:foreground="?attr/selectableItemBackground">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <!-- Yemek Resmi -->
                <ImageView
                    android:id="@+id/imageViewSepetYemekImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <!-- Yemek Adı -->
                <TextView
                    android:id="@+id/textViewYemekSepetiAd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{yemekSepetiObj.yemek.yemek_adi}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/imageViewSepetYemekImg"
                    app:layout_constraintTop_toTopOf="@id/imageViewSepetYemekImg"
                    app:layout_constraintEnd_toStartOf="@id/imageViewSil"
                    android:layout_marginStart="12dp"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <!-- Silme Butonu -->
                <ImageView
                    android:id="@+id/imageViewSil"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/delete_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Fiyat ve Adet Etiketleri grubu -->
                <LinearLayout
                    android:id="@+id/linearFiyatAdet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/imageViewSepetYemekImg"
                    app:layout_constraintTop_toBottomOf="@id/textViewYemekSepetiAd"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp">

                    <!-- Fiyat Etiketi -->
                    <TextView
                        android:id="@+id/textViewFiyatEtiketi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fiyat:"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <!-- Yemek Fiyatı -->
                    <TextView
                        android:id="@+id/textViewYemekSepetiFiyat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{yemekSepetiObj.yemek.yemek_fiyat + " ₺"}'
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"/>

                    <!-- Adet Etiketi -->
                    <TextView
                        android:id="@+id/textViewAdetEtiketi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adet:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>

                    <!-- Yemek Adedi -->
                    <TextView
                        android:id="@+id/textViewYemekSepetiAdet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{String.valueOf(yemekSepetiObj.yemekAdet)}'
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Toplam Ücret -->
                <TextView
                    android:id="@+id/textViewUrunToplamUcret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{(yemekSepetiObj.yemek.yemek_fiyat * yemekSepetiObj.yemekAdet) + " ₺"}'
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
